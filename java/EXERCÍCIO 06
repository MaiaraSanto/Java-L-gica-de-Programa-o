
/*
            Exercício 06 - Estruura Condicional DE REPETIÇÃO - SWITCH CASE
            
            Faça um programa que receba o preço de um produto e seu código de origem 
            e mostre sua procedência. A procedência obedece à tabela a seguir.
*/

import java.util.Scanner;

public class Main
{
    public static void main(String[] args) {
       Scanner input = new Scanner(System.in);
		
		int Codigo;
		float Preco;
		
		System.out.print("Digite o código do produto: ");
		Codigo = input.nextInt();
		System.out.print("Digite o preço do produto: ");
		Preco = input.nextFloat();
		
		switch (Codigo) {
	    	case 1:
		        System.out.println("O preço R$ "+ Preco+ " do Produto vem  do Sul "); 
		break;
		    case 2:
		            System.out.println("O preço R$ "+ Preco+ " do Produto vem  do Norte ");
		break;
			case 3:
		        System.out.println("O preço R$ "+ Preco+ " do Produto vem do Leste ");
		break;
	    	case 4:
		        System.out.println("O preço R$ "+ Preco+ "do Produto vem do Oeste ");
		break;
			case 5: case 6:   
		        System.out.println("O preço R$ "+ Preco+ " do Produto vem do Nordeste ");
		break;
		    case 7: case 8: case 9:
		        System.out.println("O preço R$ "+ Preco+ "do Produto vem do Sudeste ");
		break;
		    case 10: case 11: case 12 :case 13: case 14: case 15: case 16: case 17: case 18: case 19: case 20:
	    	    
		        System.out.println("O preço R$ "+ Preco+ " do Produto vem  do Centro - Oeste ");
		break;
		  case 21: case 22: case 23: case 24: case 25: case 26: case 27: case 28: case 29: case 30: case 31:
	    	    
		        System.out.println("O preço R$ "+ Preco+ "Produto do Nordeste ");
		break;
		
		default:
		        System.out.println("O preço R$ "+ Preco+ "Produto Importado ");
		}
		
	
		
		input.close();
            
		
        

    }
}
